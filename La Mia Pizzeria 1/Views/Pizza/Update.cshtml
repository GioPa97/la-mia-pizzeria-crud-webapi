@model PostCategoriesView

<div class="container">
    <form asp-controller="Pizza" asp-action="Update" asp-route-id="@Model.Pizze.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Id:</label>
            <input asp-for="Pizze.Id" type="text" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label>Titolo:</label>
            <input asp-for="Pizze.Title" type="text" class="form-control" />
            <span asp-validation-for="Pizze.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Pizze.Description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Pizze.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Categoria:</label>
            <select asp-for="Pizze.CategoryId" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach (Category category in Model.Categories)
                {
                    <option value="@category.Id">@category.Title</option>
                }
            </select>
            <span asp-validation-for="Pizze.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label>Prezzo</label>
            <input asp-for="Pizze.Prezzo" type="text" class="form-control" />
            <span asp-validation-for="Pizze.Prezzo" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label>Path Immagine:</label>
            <input asp-for="Pizze.Image" type="text" class="form-control" />
            <span asp-validation-for="Pizze.Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salva Modifiche al Post</button>
    </form>
</div>
